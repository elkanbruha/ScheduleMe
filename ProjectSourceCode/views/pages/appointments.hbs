<body>
  <h2>Appointments</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Booking ID</th>
        <th>Customer ID</th>
        <th>Schedule ID</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each appointments}}
        <tr>
          <td>{{this.booking_id}}</td>
          <td>{{this.customer_id}}</td>
          <td>{{this.schedule_id}}</td>
          <td>{{this.status}} </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</body>

